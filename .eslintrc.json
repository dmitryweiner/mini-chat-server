{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard", "plugin:jsdoc/recommended", "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "semi": [2, "always"],
        "space-before-function-paren": "off",
        "object-curly-spacing": "off",
        "jsdoc/require-param-description": "off",
        "jsdoc/require-returns-description": "off"
    }
}
